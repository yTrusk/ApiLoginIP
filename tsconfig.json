{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipDefaultLibCheck": true,
        "strict": true,
        "lib": ["ESNext"],
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "nodenext",

        "rootDir": "src",
        "outDir": "dist"
    },
    "include": ["src", "dist/index.cjs"],
    "exclude": ["node_modules"]
}